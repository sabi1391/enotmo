---
  - name: start the zabbix service in presto remote_machine
    hosts: releasepresto
    gather_facts: false
    become: true
    become_user: root
    become_method: sudo
    tasks:
       - name: Copy shell script to Remote machine
         copy:
          src: /data/scripts/zabbixstart.sh
          dest: /tmp/zabbixstart.sh
          #dest: /tmp/{{ inventory_hostname }}/zabbixstart.sh
          #when: "{{ groups['zabbixstart']}}"
       - name: Execute the shell scirpt
         command: 'sh /tmp/zabbixstart.sh'
         #when: "{{ groups['zabbixstart'] }}"

